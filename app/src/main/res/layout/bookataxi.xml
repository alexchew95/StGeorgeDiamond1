<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    
    <cabcall.stgeorgediamond.Main.Components.GlowPanel
            android:id="@+id/BookTaxiScreen_GlowPanel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/BookTaxiScreen_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <cabcall.stgeorgediamond.Main.Components.ClickableButton
            android:id="@+id/BookTaxiScreen_Button_BookHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:minHeight="25dp"
            android:minWidth="25dp"
            android:src="@drawable/square_button_book_here" />

        <cabcall.stgeorgediamond.Main.Components.ClickableButton
            android:id="@+id/BookTaxiScreen_Button_Favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/BookTaxiScreen_Button_BookHere"
            android:layout_centerVertical="true"
            android:minHeight="25dp"
            android:minWidth="25dp"
            android:src="@drawable/square_button_book_favourites" />
        
        <cabcall.stgeorgediamond.Main.Components.ClickableButton
            android:id="@+id/BookTaxiScreen_Button_NewBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/BookTaxiScreen_Button_BookHere"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom ="35dp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:src="@drawable/square_button_book_new" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/BookTaxiScreen_Button_BookHere"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/BookTaxiScreen_Button_BookHere"
            android:text="Book from Here"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primarytextcolor" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
			android:layout_centerVertical="true"
            android:layout_toRightOf="@id/BookTaxiScreen_Button_BookHere"
            android:text="Book from Favourites"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primarytextcolor" />
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/BookTaxiScreen_Button_NewBooking"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/BookTaxiScreen_Button_BookHere"
            android:text="New Booking"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primarytextcolor" />
 
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp"
            android:text="@string/TaxiProviderDisplayPhoneNum"
            android:textColor="@color/primarytextcolor"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </RelativeLayout>
 
</FrameLayout>

    